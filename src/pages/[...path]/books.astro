---
import Prose from "@/components/Content/Prose.astro";
import { booksInfo } from "@/data/booksData";
import SidebarPage from "@/layouts/SidebarPage.astro";
import { getStaticPathsByLocales } from "@/util/path";

export function getStaticPaths() {
    return getStaticPathsByLocales();
}

const { lang } = Astro.props;
---

<SidebarPage
    lang={lang}
    meta={{
        description: "The books of the KAPLAY Team.",
    }}
    sidebarMode="books"
>
    <Prose>
        <h1>We do books too!</h1>

        {
            Object.values(booksInfo).map((book) => {
        return (
                <a href={book.url} class="decoration-transparent">
                    <div
                        class="flex flex-col items-center justify-center rounded-box bg-base-200 p-4"
                    >
                        <img src={book.potrait} />
                        <h2>{book.title}</h2>
                        <p class="text-balance">{book.description}</p>
                    </div>
                </a>
            );
    })
        }
    </Prose>
</SidebarPage>
