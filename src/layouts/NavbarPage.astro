---
import Footer from "@/components/Footer/Footer.astro";
import Navbar from "@/components/Land/Navbar.astro";
import type { SidebarProps } from "@/components/Sidebar/Sidebar.astro";
import CarbonAd from "@/components/Util/CarbonAd.astro";
import type { Locale } from "@/util/i18n";
import Page, { type MetaTagData } from "./Page.astro";

type Props = {
    meta?: MetaTagData;
    lang: Locale;
    class?: string;
} & SidebarProps;

const { meta, lang, class: className } = Astro.props;
---

<Page lang={lang} meta={meta}>
    <slot name="head" slot="head" />

    <div class="land | flex flex-col">
        <header>
            <Navbar />
        </header>

        <main class:list={["flex flex-1 flex-col gap-20", className]}>
            <slot />
        </main>

        <footer>
            <Footer />
        </footer>
    </div>
</Page>
