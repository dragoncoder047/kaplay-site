---
import { Image } from "astro:assets";
import colyseus from "../../assets/sponsors/colyseus.png";
import peopleData from "../../data/contributors.json";
const contributors = Object.values(peopleData);
---

<section class="flex flex-col items-center justify-center gap-4 p-4">
    <h2 class="text-pangolin text-3xl font-bold"> Our great sponsors ‚ù§ </h2>
    <div class="mb-14">
        <a href="https://colyseus.io" target="_blank">
            <Image src={colyseus} alt="Colyseus" width={500} height={200} />
        </a>
    </div>

    <h2 class="text-pangolin text-3xl font-bold">
        People who contributed to KAPLAY.js üéâ
    </h2>
    <div
        class="flex max-w-lg flex-row flex-wrap items-center justify-center gap-6"
    >
        {
            contributors
        .filter((_, i) => i < 20)
        .map((person) => (
                <a
                    href={`https://github.com/${person.login}`}
                    target="_blank"
                >
                    <div>
                        <Image
                            class="w-18 h-18 rounded-full"
                            src={person.avatar_url}
                            alt={person.login}
                            width={72}
                            height={72}
                        />
                    </div>
                </a>
            ))
        }
        <div class="flex flex-col items-center justify-center">
            <a
                class="text-sm text-primary decoration-current decoration-dashed"
                href="https://github.com/kaplayjs/kaplay/graphs/contributors"
                target="_blank"
            >
                and {contributors.length - 20} more contributors
            </a>
        </div>
    </div>
</section>
